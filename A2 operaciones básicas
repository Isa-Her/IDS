#include <stdio.h>
#include <iostream>

int main()
{
    float numero1, numero2;
    
    std::cout <<"Escribe el primer número: ";
    std::cin >>numero1;
    
    std::cout <<"Escribe el segundo número: ";
    std::cin >>numero2;

    float suma = numero1+numero2;
    float resta = numero1-numero2;
    float multiplicacion = numero1*numero2;
    float division = numero1/numero2;
    
    std::cout <<"La suma de " <<numero1<<" y " <<numero2<< " es "<< suma<<std::endl;
    std::cout <<"La resta de " <<numero1<<" y " <<numero2<< " es "<<resta<<std::endl;
    std::cout <<"La multiplicación de " <<numero1<<" y " <<numero2<< " es "<<multiplicacion<<std::endl;
    std::cout <<"La división de " <<numero1<<" y " <<numero2<< " es "<<division<<std::endl;
}
